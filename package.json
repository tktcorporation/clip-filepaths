{
  "name": "clip-filepaths",
  "version": "0.1.1",
  "main": "index.js",
  "types": "index.d.ts",
  "description": "A cross-platform file path clipboard utility for Electron applications. Built with napi-rs and Rust, offering high performance and full TypeScript support. Currently supports macOS and Windows (Linux support is planned but not yet tested).",
  "keywords": [
    "electron",
    "clipboard",
    "file-path",
    "napi-rs",
    "rust",
    "typescript",
    "cross-platform",
    "macos",
    "windows",
    "linux"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tktcorporation/clip-filepaths"
  },
  "homepage": "https://github.com/tktcorporation/clip-filepaths#readme",
  "bugs": {
    "url": "https://github.com/tktcorporation/clip-filepaths/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "license": "MIT",
  "engines": {
    "node": ">= 20"
  },
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "napi": {
    "name": "clip-filepaths",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-pc-windows-msvc",
        "aarch64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "x86_64-unknown-linux-musl"
      ]
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@napi-rs/cli": "^2.18.4",
    "@types/node": "^22.15.2",
    "git-cliff": "^2.8.0",
    "jsdoc": "^4.0.4",
    "minami": "^1.2.3",
    "taffydb": "^2.7.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "scripts": {
    "postinstall": "npm i -g @antfu/ni",
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "vitest run",
    "test:watch": "vitest",
    "universal": "napi universal",
    "version": "napi version",
    "docs": "jsdoc -c jsdoc.json",
    "update-changelog": "git-cliff -c ./cliff.toml -o CHANGELOG.md",
    "check": "npm run check:format && npm run check:lint",
    "check:format": "npm run check:format:rust && npm run check:format:ts",
    "check:lint": "npm run check:lint:rust && npm run check:lint:ts",
    "check:format:rust": "cargo fmt --all -- --check",
    "check:format:ts": "biome check",
    "check:lint:rust": "cargo clippy -- -D warnings",
    "check:lint:ts": "biome check",
    "check:types": "tsc --noEmit",
    "check:oxlint": "oxlint",
    "pre-push": "npm run check",
    "ci": "cargo check && cargo clippy --all-targets -- -D warnings && npm run check:types && npm run check:lint:ts",
    "fmt:ts": "biome format --write",
    "lint:fix": "biome check --fix --unsafe",
    "biome": "biome"
  },
  "packageManager": "yarn@4.9.1"
}
