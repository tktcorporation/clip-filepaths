{
  "name": "clip-filepaths Dev",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",
  "features": {
    // add `docker-in-docker` for running docker commands
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "true"
		},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    // add `just` for running scripts
    "ghcr.io/guiyomh/features/just:0": {},
    // add `act` for running github actions locally
    "ghcr.io/dhoeric/features/act:1": {},
    "ghcr.io/devcontainers-extra/features/mise:1": {}
  },
  "forwardPorts": [],
  "customizations": {
    "vscode": {
      "extensions": [
        "mhutchie.git-graph",
        "WakaTime.vscode-wakatime",
        "GitHub.vscode-github-actions",
        "rust-lang.rust-analyzer"
      ],
			"files.watcherExclude": {
				"**/.git/*/**": true,
				"**/node_modules/*/**": true
			},
      "rust-analyzer.procMacro.ignored": { "napi-derive": ["napi"] }
		}
	},
  "runArgs": [
    "--env-file", ".devcontainer/.env"
  ],
    "onCreateCommand": {
    "update-apt": ["sudo", "apt-get", "update"]
  },
  "updateContentCommand": {
    "install-packages": ["sudo", "apt-get", "install", "-y", "ripgrep", "bc"]
  },
  "postCreateCommand": {
    "setup-mise-bash": [
      "bash",
      "-c",
      "echo 'eval \"$(mise activate bash)\"' >> ~/.bashrc"
    ],
    "trust-mise": ["mise", "trust"]
  },
  "postStartCommand": "mise install",
  
  // X11サーバーサポートのための設定
  "remoteEnv": {
    "DISPLAY": "${localEnv:DISPLAY}"
  }
}
